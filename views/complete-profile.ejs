    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        bg: '#0b0e11',
                        surface: '#151a21',
                        action: '#2962ff',
                        border: '#2d3748',
                        text: {
                            primary: '#e2e8f0',
                            secondary: '#a0aec0'
                        },
                        bull: '#00e396',
                        bear: '#ff007a'
                    },
                    fontFamily: {
                        mono: ['"JetBrains Mono"', 'monospace'],
                        sans: ['Inter', 'sans-serif']
                    }
                }
            }
